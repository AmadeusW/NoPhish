{
  "name": "NoPhish",
  "version": "0.3",
  "description": "Allows you to verify where URL Shortners redirects you",
  "manifest_version": 2,
  "browser_action": {
    "default_icon": "img/icon128.png",
    "default_title": "NoPhish"
  },
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "permissions": [
    "storage", "webRequest","webRequestBlocking", "*://*/*"
  ],
  "options_page": "options.html",
  "background": {
    "scripts": ["defaultTrackedDomains.js", "bgp.js"],
    "persistent": true
  },
  "web_accessible_resources": [
    "redirectConfirmation.html"
  ]
}